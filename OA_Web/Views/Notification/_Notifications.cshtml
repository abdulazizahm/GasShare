@model IEnumerable<OA_Service.ViewModels.NotificationViewModel>

@if (ViewBag.NoNew == null)
{
    <h2>Notifications - <span>@Model.Count()</span></h2>
}
else
{
    <h2>No New Notification</h2>
}

@foreach (var noti in Model)
{
    <a class="notifications-item text-decoration-none" href="@noti.Url" >
        @*<img src="https://i.imgur.com/uIgDDDd.jpg" alt="img">*@
        <div class="text">
            <h6>@noti.Created_at.ToShortDateString()</h6>
            <p>@noti.Body</p>
            @if (!noti.Seen) {
                <div hidden>UnseenNotification</div>
            }
        </div>
    </a>
}


