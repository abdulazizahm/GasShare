@model OA_Service.ViewModels.CarViewModel

@{
    ViewData["Title"] = "updateCar";
}

<div class="container">
    <div class="row">
        <div class="col-md-6">
            <form enctype="multipart/form-data" asp-action="updateCar">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                
                <h1 style="text-align:center">Update Car Info</h1>
                <hr />
                <div class="form-group">
                    <label asp-for="Car_Number" class="control-label"></label>
                    <input asp-for="Car_Number" required class="form-control" />
                    <span asp-validation-for="Car_Number" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Car_Model" class="control-label"></label>
                    <input asp-for="Car_Model" required class="form-control" />
                    <span asp-validation-for="Car_Model" class="text-danger"></span>
                </div>
                <div class="row">
                    <div class="col-5">
                        <div class="form-group imageContainer" width="100%" height="150px">
                            <label asp-for="Car_Photo" class="control-label"></label>
                            <div>
                                <img src="~/images/Cars/@Model.Car_Photo" id="SSN_Photo" />
                            </div>
                            <input type="file" name="PhotoFormFile" id="PhotoFormFile" value="@Model.Car_Photo" class="form-control" onchange="UploadImageOne(this)" />
                            <span asp-validation-for="Car_Photo" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-1"></div>
                    <div class="col-5">
                        <div class="form-group imageContainer" width="100%px" height="150px" id="licenceContainer">
                            <label asp-for="Licence_Photo" class="control-label"></label>
                            <div>
                                <img src="~/images/Cars/@Model.Licence_Photo" id="LicencePhoto" />
                            </div>
                            <input type="file" name="LicenceFormFile" id="LicenceFormFile" value="@Model.Licence_Photo" class="form-control" onchange="UploadImagetwo(this)" />
                            <span asp-validation-for="Licence_Photo" class="text-danger"></span>
                        </div>



                    </div>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save Edit" class="btn btn-primary" style="width:100%" />
                </div>
            </form>
        </div>
    </div>
</div>

@*<div>
    <a asp-action="Index">Back to List</a>
</div>*@

@section scripts{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script type="text/javascript">

        function UploadImageOne(fileInput) {
            var fileToUpload = fileInput.files.item(0)

            var filereader = new FileReader();
            filereader.onload = (event) => {
                document.getElementById("SSN_Photo").src = event.target.result;

            }
            filereader.readAsDataURL(fileToUpload)
        }
        function UploadImagetwo(fileInput) {
            var fileToUpload = fileInput.files.item(0)

            var filereader = new FileReader();
            filereader.onload = (event) => {
                document.getElementById("LicencePhoto").src = event.target.result;

            }
            filereader.readAsDataURL(fileToUpload)
        }


    </script>
}