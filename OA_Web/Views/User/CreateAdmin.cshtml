@model OA_Service.ViewModels.CreateAdminViewModel
@{
    ViewData["Title"] = "CreateAdmin";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Create Admin</h1>


@section Styles {

}


@if (TempData["Success_create"] != null)
{
    <div class="alert alert-success">@TempData["Success_create"]</div>
}
@if (TempData["failed_Create"] != null)
{
    <div class="alert alert-success">@TempData["failed_Create"]</div>
}





<form asp-action="CreateAdmin" asp-controller="User">
    <hr />

    <div class="row">
        <div class="form-group col-md-6 m-0">
            <label asp-for="@Model.FirstName"></label>
            <input asp-for="@Model.FirstName" class="form-control" />
            <span asp-validation-for="@Model.FirstName" class="text-danger"></span>
        </div>
        <div class="form-group col-md-6 m-0">
            <label asp-for="@Model.LastName"></label>
            <input asp-for="@Model.LastName" class="form-control" />
            <span asp-validation-for="@Model.LastName" class="text-danger"></span>
        </div>
    </div>

    <div asp-validation-summary="None" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="@Model.Email"></label>
        <input asp-for="@Model.Email" class="form-control" />
        <span asp-validation-for="@Model.Email" class="text-danger"></span>
    </div>










    <div class="row">
        <div class="form-group col-md-6 m-0">
            <label asp-for="@Model.PasswordHash"></label>
            <input asp-for="@Model.PasswordHash" class="form-control" />
            <span asp-validation-for="@Model.PasswordHash" class="text-danger"></span>
        </div>
        <div class="form-group col-md-6 m-0">
            <label asp-for="@Model.ConfirmPassword"></label>
            <input asp-for="@Model.ConfirmPassword" class="form-control" />
            <span asp-validation-for="@Model.ConfirmPassword" class="text-danger"></span>
        </div>
    </div>








    <button type="submit" class="btn btn-success">Register Admin</button>
</form>






@section Scripts {
    <partial name="_ValidationScriptsPartial" />

}


